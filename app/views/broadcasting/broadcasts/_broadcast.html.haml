.broadcast
  .body
    %h3.title= broadcast.title
    .content
      = broadcast.content

  .controls
    .fl
      = link_to t(:hide_this_broadcast, default: 'hide this broadcast'), '#', 'data-id' => broadcast.id, class: 'hide_broadcast'

    .fr
      - if broadcasts_count > 0
        = link_to t(:view_all_broadcasts, count: broadcasts_count, default: "View (#{broadcasts_count}) new broadcasts"), '#', class: 'new_broadcasts'
